{
  "Canvas": {
    "Width": 1200,
    "Height": 630,
    "Padding": 20,
    "MaxWidth": 800,
    "VerticalAlignment": "Center"
  },
  "Directories": [
    {
      "Name": "fonts",
      "Path": "public/fonts"
    },
    {
      "Name": "images",
      "Path": "public/content"
    },
    {
      "Name": "content",
      "Path": "src/data/content"
    }
  ],
  "Fonts": [
    {
      "Name": "jbmono",
      "Path": "#fonts#/jetbrains-mono.ttf",
      "Weight": 400
    },
    {
      "Name": "jbmono-bold",
      "Path": "#fonts#/jetbrains-mono-bold.ttf",
      "Weight": 700
    },
    {
      "Name": "rubik",
      "Path": "#fonts#/rubik.ttf",
      "Weight": 400
    },
    {
      "Name": "rubik-bold",
      "Path": "#fonts#/rubik-bold.ttf",
      "Weight": 700
    }
  ],
  "Layers": [
    {
      "Type": "Overlay",
      "Background": "0,0,0,128"
    },
    {
      "Type": "Text",
      "Content": "{title}",
      "Color": "255,255,255,255",
      "Font": "rubik-bold",
      "FontSize": 64
    },
    {
      "Type": "Text",
      "Content": "{date|dd.MM.yyyy}",
      "Color": "255,255,255,255",
      "Font": "jbmono",
      "FontSize": 48
    },
    {
      "Type": "ListOfTexts",
      "Content": "{tags}",
      "Color": "255,255,255,255",
      "Font": "jb-mono"
    }
  ]
}