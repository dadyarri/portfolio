{
  "Canvas": {
    "Width": 1200,
    "Height": 630
  },
  "Directories": [
    {
      "Name": "fonts",
      "Path": "public/fonts"
    },
    {
      "Name": "images",
      "Path": "public/content"
    },
    {
      "Name": "content",
      "Path": "src/data/content"
    }
  ],
  "Fonts": [
    {
      "Name": "jbmono",
      "Path": "#fonts#/jetbrains-mono.ttf",
      "Weight": 400
    },
    {
      "Name": "jbmono-bold",
      "Path": "#fonts#/jetbrains-mono-bold.ttf",
      "Weight": 700
    },
    {
      "Name": "rubik",
      "Path": "#fonts#/rubik.ttf",
      "Weight": 400
    },
    {
      "Name": "rubik-bold",
      "Path": "#fonts#/rubik-bold.ttf",
      "Weight": 700
    }
  ],
  "Layers": [
    {
      "Type": "Overlay",
      "Background": "0,0,0,128"
    },
    {
      "Type": "Text",
      "Content": "{title}",
      "Color": ""
    },
    {
      "Type": "Text",
      "Content": "{date}",
      "Color": ""
    },
    {
      "Type": "ListOfTexts",
      "Content": "{tags}",
      "Color": ""
    }
  ]
}