---
interface CVHeaderData {
  name: string;
  title: string;
  photo?: string;
  summary?: string;
}

interface Props {
  data: CVHeaderData;
}

const { data } = Astro.props;
const { name, title, photo, summary } = data;
---

<div class="cv-header">
  <div class="cv-header-content">
    <div class="cv-header-info">
      <h1>{name}</h1>
      <h2>{title}</h2>
      {summary && <p>{summary}</p>}
    </div>
    {
      photo && (
        <div class="cv-header-photo">
          <img src={photo} alt={`${name}'s photo`} />
        </div>
      )
    }
  </div>
</div>

<style lang="scss">
  .cv-header {
    margin-bottom: 2rem;

    &-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 2rem;

      @media print {
        align-items: flex-start !important;
        text-align: left !important;
      }

      // This media query currently stacks content.
      // If you want them to remain side-by-side on small screens,
      // you would either remove this or modify its behavior.
      @media (max-width: 768px) {
        /*
       * To make .cv-header-photo and .cv-header-content
       * stay in one line, we need to ensure flex-direction is not 'column'.
       * If you still want some responsiveness for the content itself,
       * you might consider if the photo should be part of the main flex
       * container or separate.
       *
       * For them to be in one line like in a normal viewport,
       * we'll revert flex-direction to 'row' here,
       * or even remove this entire block if you want it always row.
       * If you remove it, the default flex-direction (row) will apply.
       */
        flex-direction: row; /* Changed from column to row */
        align-items: center; /* Keep items centered vertically */
        text-align: center; /* Adjust if needed for text within info */
      }
    }

    &-info {
      flex: 1;

      & h1 {
        font-size: 2.25rem;
        font-weight: bold;
        margin-bottom: 0.5rem;

        @media print {
          color: black !important;
        }
      }

      & h2 {
        font-size: 1.5rem;
        color: var(--text-1);
        margin-bottom: 1rem;

        @media print {
          color: black !important;
        }
      }

      & p {
        color: var(--text-1);
        margin-top: 1rem;

        @media print {
          color: black !important;
        }
      }
    }

    & &-photo {
      flex-shrink: 0;

      & img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        object-position: 30% 0%;
        overflow: hidden;
      }
    }
  }
</style>
