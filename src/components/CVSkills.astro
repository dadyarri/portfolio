---
import type { SkillCategory } from "@type/cv";

interface Props {
  categories: SkillCategory[];
}

const { categories } = Astro.props;
---

<div class="cv-skills">
  {categories.map((category) => (
    <div class="cv-skills-category">
      <h3 class="text-xl font-semibold mb-4">{category.name}</h3>
      <div class="tags">
        {category.skills.map((skill) => (
          <span class="tag">{skill.name}</span>
        ))}
      </div>
    </div>
  ))}
</div>

<style>
  .cv-skills {
    display: grid;
    gap: 2rem;
  }

  .cv-skills-category {
    margin-bottom: 1rem;
  }
</style> 