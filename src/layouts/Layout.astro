---
import Header from "../components/Header.astro";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/open-sans";
import "@fontsource/jetbrains-mono"
import "@/styles/tailwind.css";
import "@/styles/post.css";

export type Props = {
  slug?: string;
  title?: string;
  isPost?: boolean
}

const { title, slug, isPost } = Astro.props;


---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} og={{image: isPost ? `/posts/${slug}/og-image.png`: ""}} />

  <body
    class="mx-auto flex min-h-screen lg:max-w-[1300px] flex-col gap-9 dark:bg-neutral-950 px-10 py-8 text-sm dark:text-neutral-400 md:gap-20 md:py-16 text-black"
  >
    <Header />
    <slot />
    <style is:global>
      html {
        font-family: "Open Sans", serif;
      }
      code, pre {
        font-family: "JetBrains Mono", monospace;
      }
    </style>
  </body>
</html>
