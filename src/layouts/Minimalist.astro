---
import '@fontsource/open-sans';
import Download from '../components/Download.astro';
import '../styles/cv.css';

type Props = {
  frontmatter: {
    title: string;
    pdfLink?: string;
    noIndex?: boolean;
    description?: string;
    avatarSrc: string;
  };
};

const { title, pdfLink, noIndex, description, avatarSrc } = Astro.props.frontmatter;

const initials = title
  .split(' ')
  .map((word) => word[0].toUpperCase())
  .slice(0, 2);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description || title} />
    {noIndex && <meta name="robots" content="noindex" />}
    <title>{title}</title>
  </head>
  <body class="my-0 bg-indigo-50 dark:bg-slate-900 sm:my-14">
    <div class="container mx-auto flex justify-center">
      <article class="minimalist relative">
        <img class="w-32" src={avatarSrc} />
        {
          pdfLink && (
            <div class="not-prose absolute right-4 top-4">
              <Download href={pdfLink} />
            </div>
          )
        }
        <slot />
      </article>
    </div>
    <style></style>
  </body>
</html>
