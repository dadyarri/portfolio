---
import type { GetStaticPaths } from "astro";
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import {filterPostsBySeries} from "@utils/content";
import PostCards from "@components/PostCards.astro";

export const getStaticPaths = ( async () => {
    const series = await getCollection('series')
    return series.map((s) => ({
		params: { id: s.id },
        props: s
	}))
}) satisfies GetStaticPaths;

type Props = CollectionEntry<'series'>
const series = Astro.props
const seriesLabel = series.data.label;

const posts = await filterPostsBySeries(series.id);
---

<Layout title=`Посты в цикле ${seriesLabel}`>

    <PostCards posts={posts}/>

</Layout>